@model IEnumerable<Afpetit.Models.Commande>

@{
    ViewBag.Title = "IndexRestaurant";
    Layout = "~/Views/Shared/_LayoutResto.cshtml";
}

<h2 class="pt-3">Mes Commandes</h2>

@* Div Contenant le graphique *@
@*<canvas id="myChart" width="400" height="200"></canvas>*@

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateCommande)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prix)
        </th>
        <th>
            @Html.DisplayName("Etat")
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Utilisateur.Nom)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCommande)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EtatCommande.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Utilisateur.Nom)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdCommande }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdCommande })
            </td>
        </tr>
    }

</table>
@Scripts.Render("~/bundles/chart")
<script type="text/javascript">
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            type: 'line',
            labels: [new Date("2015-3-15").toLocaleString(), new Date("2015-3-26").toLocaleString(), new Date("2015-4-27").toLocaleString()],
            datasets: [{
                label: 'Achat',
                data: [{
                    t: new Date("2015-3-15"),
                    y: 12
                },
                {
                    t: new Date("2015-3-26"),
                    y: 21
                },
                {
                    t: new Date("2015-4-27"),
                    y: 32
                }
                ]
            }]
        }
    });
</script>
