@model Afpetit.Models.Panier
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    <div class="">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Mon Panier</span>
            @{
                if (Model != null)
                {
                    <span class="badge badge-secondary badge-pill">@Model.Quantite</span>
                }
                else
                {
                    <span class="badge badge-secondary badge-pill">0</span>
                }
            }
        </h4>
        <ul class="list-group mb-3">
            @{
                if (Model != null)
                {
                    foreach (Afpetit.Models.ItemPanier item in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">@item.Nom</h6>
                                <small class="text-muted">@item.Description</small>
                            </div>
                            <span class="text-muted">@item.Prix</span>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total : </span>
                        <strong>@Model.Total</strong>
                    </li>
                }
                else
                {
                    <li class="list-group-item d-flex justify-content-between lh-condensed">Aucun Produit</li>
                }
            }


        </ul>
        <button class="col-12 btn btn-outline-success btnCommander">Commander</button>
    </div>
}