@model IEnumerable<Afpetit.Models.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Statut)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prix)
        </td>
        <td>
            @if (item.Statut)
            {
                <a href="@Url.Action("Statut","Menus", new { @id=item.IdMenu })"><i class="fa fa-check" aria-hidden="true" style="color:lightgreen"></i></a>
            }
            else
            {
                <a href="@Url.Action("Statut","Menus", new { @id=item.IdMenu })"><i class="fa fa-close" aria-hidden="true" style="color:red"></i></a>
            }
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.IdMenu })
        </td>
    </tr>
}

</table>
