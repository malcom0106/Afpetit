@model IEnumerable<Afpetit.Models.Produit>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutResto.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nouveau", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayName("Prod Journaliere")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Statut)
        </th>
        <th>
            @Html.DisplayName("Catégorie")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantite)
        </td>
        <td>
            @if (item.Statut)
            {
                <a href="@Url.Action("Statut","Produits", new { @id=item.IdProduit })"><i class="fa fa-check" aria-hidden="true" style="color:lightgreen"></i></a>
            }
            else
            {
                <a href="@Url.Action("Statut","Produits", new { @id=item.IdProduit })"><i class="fa fa-close" aria-hidden="true"style="color:red"></i></a>
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categorie.Nom)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.IdProduit })
        </td>
    </tr>
}

</table>
