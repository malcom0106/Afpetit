@model Afpetit.Models.Restaurant

@{
    ViewBag.Title = "ChangePhoto";
    Layout = "~/Views/Shared/_LayoutResto.cshtml";
}

<h2>ChangePhoto</h2>


<div class="row">
    @if (Model.Photos.Count > 0)
    {
        foreach (Afpetit.Models.Photo photo in Model.Photos)
        {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" alt="@photo.Nom [100%x225]" style="height: 225px; width: 100%; display: block;" src="@photo.Url" data-holder-rendered="true">
                    <div class="card-body">
                        <p class="card-text">@photo.Nom</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                @using (Html.BeginForm("DelPhoto","Restaurants",FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("IdPhoto",photo.IdPhoto)
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Supprimer</button>
                                }
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
<div><a class="btn btn-success col-12" href="@Url.Action("AddPhoto","Restaurants")">Ajouter</a></div>