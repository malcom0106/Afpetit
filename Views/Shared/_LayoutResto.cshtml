<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bon Afpétit</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/formulaire.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-red">
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <a class="navbar-brand" href="@Url.Action("ConnexionRestaurant","Restaurants")">Bon Afpétit ! Administration Restaurant</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarRight" aria-controls="navbarRight" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse w-100 order-3 dual-collapse2" id="navbarRight">
            <ul class="navbar-nav ml-auto">
                @{
                    if (Session["Restaurant"] != null)
                    {
                        Afpetit.Models.Restaurant restaurant = (Afpetit.Models.Restaurant)Session["Restaurant"];
                        if (restaurant != null)
                        {
                            <span class="navbar-text px-1">
                                @Html.ActionLink(restaurant.Nom, "DeconnexionRestaurant", "Restaurants", null, new { @class = "nav-link btn btn-outline-secondary" })
                            </span>
                        }
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Connexion", "ConnexionRestaurant", "Restaurants", null, new { @class = "nav-link" })
                        </li>
                    }
                }
            </ul>
        </div>
    </nav>

    <div class="page-wrapper bg-red p-t-100 p-b-100 font-robo">
        <div class="wrapper wrapper--w960">
            <div class="card card-2">
                @RenderBody()
            </div>
        </div>
    </div>
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Bon AFPétit</p>
    </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
