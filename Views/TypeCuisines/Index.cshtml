@model IEnumerable<Afpetit.Models.TypeCuisine>

@{

}

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statut)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
    <tr>
        @{
            if (item.Photos.Count > 0)
            {
                <td>                    
                    <img title="@item.Nom" alt="@item.Nom" src="@item.Photos.FirstOrDefault().Url" class="img-fluid" />
                </td>
            }
            else
            {
                <td></td>
            }
        }
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Statut)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IdTypeCuisine }) |
            @Html.ActionLink("Details", "Details", new { id = item.IdTypeCuisine }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IdTypeCuisine })
        </td>
    </tr>
    }
    
    </table>
