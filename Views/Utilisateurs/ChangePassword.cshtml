@model Afpetit.Models.Utilisateur

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutResto.cshtml";
}

<h2>ChangePassword</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdUtilisateur)

    <div class="form-group">
        @Html.Label("Nouveau Password", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("NewPassword1", new { htmlAttributes = new { @class = "form-control", @type="Password" } })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Nouveau Password", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("NewPassword2", new { htmlAttributes = new { @class = "form-control", @type="Password" } })
        </div>
    </div>
    <div class="col-12"><input type="submit" value="Modifier" class="btn btn-primary col-12" /></div>
</div>
}
